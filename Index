    <div class="chat-toggle" id="chat-toggle" onclick="toggleChat()">
        Live Chat
    </div>


 <script>
        function toggleChat() {
            const chatbot = document.getElementById('chatbot');
            const chatToggle = document.getElementById('chat-toggle');
            if (chatbot.style.display === 'none' || !chatbot.style.display) {
                chatbot.style.display = 'block';
                chatToggle.style.display = 'none';
            } else {
                chatbot.style.display = 'none';
                chatToggle.style.display = 'block';
            }
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                const input = document.getElementById('chat-input');
                const message = input.value;
                if (message.trim()) {
                    addMessage('user', message);
                    respondToMessage(message);
                    input.value = '';
                }
            }
        }

        function addMessage(sender, message) {
            const messagesDiv = document.getElementById('chat-messages');
            const messageElement = document.createElement('div');
            messageElement.style.margin = '10px';
            messageElement.style.padding = '10px';
            messageElement.style.borderRadius = '5px';
            messageElement.style.maxWidth = '80%';
            
            if (sender === 'user') {
                messageElement.style.marginLeft = 'auto';
                messageElement.style.background = '#ff69b4';
                messageElement.style.color = 'white';
            } else {
                messageElement.style.background = '#f0f0f0';
            }
            
            messageElement.textContent = message;
            messagesDiv.appendChild(messageElement);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function respondToMessage(message) {
            // Simple response system - can be expanded
            const responses = {
                "hello": "Hello! How can I support you today?",
                "hesi": "Ndinofara urisei iwewe",
                "i love you": " even though i do not have feeling,I love you too human!",
                "ndinokuda": " kunyangwe ndisina mafiringizi, ndinokudawo",
                "im suffering from birth loss": "I'm so sorry you're experiencing this.The loss of a child is incedibly painful and personal, and its okay  to feel a wide range of emotions as you navigate through it.If you're comfortable i'm here to listen and support you in this difficult time",
                "ndine dhipuresheni kubva pandakazvara mwana": "Ndine ruregerewo nezvauri kunzwa.Zvinorwadza kunyanya kuvanhukadzi vakazvara mwana kana uchida rubatsiro kana kuti wekutaura naye ndirpano ",
                "help": "I'm here to listen and support you. Would you like to talk about how you're feeling?",
                "default": "I'm here to support you. Would you like to share more about what you're experiencing?"
            };

            setTimeout(() => {
                const response = responses[message.toLowerCase()] || responses.default;
                addMessage('bot', response);
            }, 1000);
        }
    </script>

    
